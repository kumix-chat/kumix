{
  "name": "kumix",
  "private": true,
  "version": "0.0.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "bunx @biomejs/biome check .",
    "dev:web": "cd apps/web && bun run dev",
    "build:web": "cd apps/web && bun run build",
    "typecheck:web": "cd apps/web && bun run typecheck",
    "dev:desktop": "cd apps/desktop && bun run tauri dev",
    "build:desktop": "cd apps/desktop && bun run tauri build",
    "typecheck:desktop": "cd apps/desktop && bun run typecheck",
    "lint": "bunx @biomejs/biome lint .",
    "format": "bunx @biomejs/biome format --write .",
    "i18n:extract": "lingui extract",
    "i18n:compile": "lingui compile",
    "lint:rust": "cargo clippy --manifest-path apps/desktop/src-tauri/Cargo.toml --all-targets --all-features -- -D warnings",
    "format:rust": "cargo fmt --manifest-path apps/desktop/src-tauri/Cargo.toml",
    "test": "vitest",
    "test:run": "vitest run",
    "test:web": "vitest run --project web",
    "test:desktop": "vitest run --project desktop",
    "test:packages": "vitest run --project packages",
    "test:rust": "cargo test --manifest-path apps/desktop/src-tauri/Cargo.toml"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@lingui/babel-plugin-lingui-macro": "^5.0.0",
    "@lingui/cli": "^5.0.0",
    "@lingui/vite-plugin": "^5.0.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^25.2.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "jsdom": "^28.0.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "react-aria-components": "^1.14.0",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.2.2"
  }
}
